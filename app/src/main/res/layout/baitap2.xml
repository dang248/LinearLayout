<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="1"
            android:textSize="50sp"
            android:gravity="center"
            android:background="#44A348"
            android:layout_weight="1.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="8.75"
            android:weightSum="10"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="3"
                android:textSize="50sp"
                android:gravity="center"
                android:background="#F80334"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:text="4"
                android:textSize="50sp"
                android:gravity="center"
                android:background="#C35663"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:weightSum="10"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="2"
            android:textSize="50sp"
            android:gravity="center"
            android:background="#F3DE28"
            android:layout_weight="1.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="6.25"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="5"
                android:textSize="50sp"
                android:gravity="center"
                android:background="#2C80C3"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:text="6"
                android:textSize="50sp"
                android:gravity="center"
                android:background="#9C27B0"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2.5"
            android:weightSum="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="7 "
                android:textSize="50sp"
                android:gravity="center"
                android:background="#320E71"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:text="8"
                android:textSize="50sp"
                android:gravity="center"
                android:background="#FF9800"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:text="9"
                android:textSize="50sp"
                android:gravity="center"
                android:background="#686E68"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>